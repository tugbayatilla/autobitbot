<UserControl x:Class="AutoBitBot.UI.MainApp.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://autobitbot.com/UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ui:ModernTab SelectedSource="/Content/SettingsUserExchangeKeysUserControl.xaml" Layout="List">
            <ui:ModernTab.Links>
                <ui:Link DisplayName="Active Tasks" Source="/UserControls/StaticActiveTasksControl.xaml" />
                <ui:Link DisplayName="Killed Tasks" Source="/UserControls/StaticKilledTasksControl.xaml" />
                <ui:Link DisplayName="User Keys" Source="/Content/SettingsUserExchangeKeysUserControl.xaml" />
                <!--<ui:Link DisplayName="Appearance" Source="/Content/SettingsAppearance.xaml" />-->
            </ui:ModernTab.Links>
        </ui:ModernTab>
    </Grid>
</UserControl>
