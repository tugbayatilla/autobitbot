<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://autobitbot.com/UI"
             xmlns:UserControls="clr-namespace:AutoBitBot.UI.MainApp.UserControls" 
            x:Class="AutoBitBot.UI.MainApp.Pages.DashboardPage"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" x:Name="Dashboard">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="300"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        
        <UserControls:AllExchangeTickersControl />
        <UserControls:AllExchangeBalancesControl Grid.Column="1" />

        <UserControls:MarketOpenOrdersControl Grid.Column="0" Grid.Row="1" />



    </Grid>
</UserControl>
