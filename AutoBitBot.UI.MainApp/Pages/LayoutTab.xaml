<UserControl x:Class="AutoBitBot.UI.MainApp.Pages.LayoutTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://autobitbot.com/UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ui:ModernTab SelectedSource="/Content/LoremIpsum.xaml" Layout="Tab">
            <ui:ModernTab.Links>
                <ui:Link DisplayName="Basic" Source="/Content/LoremIpsum.xaml" />
                <ui:Link DisplayName="Split" Source="/Content/LoremIpsumSplit.xaml" />
                <ui:Link DisplayName="List" Source="/Content/LoremIpsumList.xaml" />
            </ui:ModernTab.Links>
        </ui:ModernTab>
    </Grid>
</UserControl>
