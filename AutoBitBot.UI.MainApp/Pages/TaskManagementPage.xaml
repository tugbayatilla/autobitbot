<UserControl x:Class="AutoBitBot.UI.MainApp.Pages.TaskManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:content="clr-namespace:AutoBitBot.UI.MainApp.Content"
             xmlns:ui="http://autobitbot.com/UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ui:ModernTab SelectedSource="/UserControls/ActiveTasksControl.xaml" Layout="List">
            <ui:ModernTab.Links>
                <ui:Link DisplayName="Active Tasks" Source="/UserControls/ActiveTasksControl.xaml" />
                <ui:Link DisplayName="Killed Tasks" Source="/UserControls/KilledTasksControl.xaml" />
            </ui:ModernTab.Links>
        </ui:ModernTab>
    </Grid>
</UserControl>
