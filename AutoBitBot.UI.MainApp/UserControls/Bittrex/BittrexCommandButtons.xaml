<UserControl x:Class="AutoBitBot.UI.MainApp.UserControls.Bittrex.BittrexCommandButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoBitBot.UI.MainApp.UserControls.Bittrex"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Button Command="{Binding Open_BittrexSellLimitCommand}" CommandParameter="{Binding}">Open Bittrex Sell Window</Button>
        <Separator />
        <Button Command="{Binding Open_BittrexBuyLimitCommand}" CommandParameter="{Binding}">Open Bittrex Buy Window</Button>
        <Separator />
        <Button Command="{Binding Open_BittrexBuyAndSellLimitCommand}" CommandParameter="{Binding}">Open Bittrex Buy and Sell Window</Button>

    </StackPanel>
</UserControl>
