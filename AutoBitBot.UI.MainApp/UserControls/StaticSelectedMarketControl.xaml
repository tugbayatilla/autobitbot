<UserControl x:Class="AutoBitBot.UI.MainApp.UserControls.StaticSelectedMarketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:server="clr-namespace:AutoBitBot.ServerEngine"
             DataContext="{Binding Source={x:Static server:Server.Instance}, Path=SelectedMarket}"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal">
        <Label Content="{Binding ExchangeName, FallbackValue='No Exchange'}" Foreground="Teal" Margin="5"></Label>
        <Label Content="{Binding MarketName, FallbackValue='No Market'}" Foreground="Red" Margin="5"></Label>
    </StackPanel>
</UserControl>
