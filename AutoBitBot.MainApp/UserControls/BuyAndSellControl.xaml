<UserControl x:Class="AutoBitBot.MainApp.UserControls.BuyAndSellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoBitBot.MainApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="190" d:DesignWidth="300">
    <StackPanel>
        <Label Foreground="Blue" Margin="5,5,5,0">Market: BTC-XRP</Label>
        <Label>Price</Label>
        <TextBox Name="PriceTextBox" Text="{Binding Price}"></TextBox>
        <Label>Quantity</Label>
        <TextBox Name="QuantityTextBox" Text="{Binding Quantity}"></TextBox>
        <Label>Profit %</Label>
        <ComboBox SelectedValue="{Binding ProfitPercent}">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
        </ComboBox>

        <Button Command="{Binding ImmediatelySellAfterBuyCommand}">Immediately Sell After Buy</Button>
    </StackPanel>
</UserControl>
