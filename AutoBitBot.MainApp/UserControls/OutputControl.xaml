<UserControl x:Class="AutoBitBot.MainApp.UserControls.OutputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoBitBot.MainApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300" Width="Auto" Height="Auto">
    <Grid>
        <RichTextBox VerticalScrollBarVisibility="Visible" x:Name="Output" 
                     HorizontalScrollBarVisibility="Visible" 
                     IsReadOnly="True" MaxHeight="200"></RichTextBox>
    </Grid>
</UserControl>
