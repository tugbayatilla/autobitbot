<UserControl x:Class="AutoBitBot.MainApp.UserControls.ActionButtonsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoBitBot.MainApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="500">
    <StackPanel Orientation="Horizontal">
        <Button CommandParameter="{Binding}" Command="{Binding Path=OpenBuyAndSellCommand}" Style="{DynamicResource GlassButton}">Open BuyAndSell</Button>
        <Button CommandParameter="{Binding}" Command="{Binding Path=OpenMarketsCommand}" Style="{DynamicResource GlassButton}">Open Markets</Button>
        <Button CommandParameter="{Binding}" Command="{Binding Path=OpenKilledTasksCommand}" Style="{DynamicResource GlassButton}">Open Killed Tasks</Button>
        <Button CommandParameter="{Binding}" Command="{Binding Path=OpenOrderHistoryCommand}" Style="{DynamicResource GlassButton}">Open OrderHistory</Button>
    </StackPanel>
</UserControl>
